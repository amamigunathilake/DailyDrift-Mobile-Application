                                android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                        </LinearLayout>

                <!-- Not Done -->
                <LinearLayout
