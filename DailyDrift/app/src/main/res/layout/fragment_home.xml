            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddHabit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_new_habit"
                    android:textColor="@color/text_on_primary"
                    app:backgroundTint="@color/primary_500"
                    app:cornerRadius="12dp"
                    android:paddingVertical="16dp"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareHowYouFeel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/share_how_you_feel"
                    android:textColor="@color/text_on_primary"
                    app:backgroundTint="@color/accent_purple_500"
                    app:cornerRadius="12dp"
                    android:paddingVertical="16dp"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/ic_mood"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_habits"
                android:textColor="@color/primary_500"
                android:backgroundTint="@color/primary_100"
                app:strokeColor="@color/primary_300"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                android:paddingVertical="16dp"
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_habit"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Modern Habits Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_habits"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvHabitsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 habits"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <!-- Enhanced Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_habits_empty"
                android:contentDescription="@string/empty_habits_icon_desc"
                android:layout_marginBottom="24dp"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_habits_title"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_habits_ready_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmptyAddHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_building_habits"
                android:textColor="@color/text_on_primary"
                app:backgroundTint="@color/primary_500"
                app:cornerRadius="12dp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                app:icon="@drawable/ic_add"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>